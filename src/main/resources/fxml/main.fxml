<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<VBox xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/11.0.1"
      fx:controller="com.backup.ui.MainController">
    <children>
        <!-- Header -->
        <HBox alignment="CENTER_LEFT" style="-fx-background-color: #2c3e50; -fx-padding: 15;">
            <children>
                <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="NAS Backup Tool">
                    <font>
                        <Font name="System Bold" size="24.0"/>
                    </font>
                </Text>
            </children>
        </HBox>

        <!-- Main Content -->
        <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
            <content>
                <VBox spacing="20.0">
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                    </padding>
                    <children>

                        <!-- NAS Configuration Section -->
                        <VBox spacing="10.0" style="-fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-padding: 15;">
                            <children>
                                <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="NAS Configuration"/>

                                <GridPane hgap="10.0" vgap="10.0">
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="NEVER" minWidth="120.0"/>
                                        <ColumnConstraints hgrow="ALWAYS"/>
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints/>
                                        <RowConstraints/>
                                        <RowConstraints/>
                                        <RowConstraints/>
                                        <RowConstraints/>
                                        <RowConstraints/>
                                    </rowConstraints>
                                    <children>
                                        <Label text="Host/IP:"/>
                                        <TextField fx:id="hostField" promptText="192.168.1.100"
                                                   GridPane.columnIndex="1"/>

                                        <Label text="Port:" GridPane.rowIndex="1"/>
                                        <TextField fx:id="portField" prefWidth="100.0" promptText="445" text="445"
                                                   GridPane.columnIndex="1"/>

                                        <Label text="Username:" GridPane.rowIndex="2"/>
                                        <TextField fx:id="usernameField" promptText="admin" GridPane.columnIndex="1"/>

                                        <Label text="Password:" GridPane.rowIndex="3"/>
                                        <PasswordField fx:id="passwordField" promptText="password"
                                                       GridPane.columnIndex="1"/>

                                        <Label text="Share Name:" GridPane.rowIndex="4"/>
                                        <TextField fx:id="shareField" promptText="storage" GridPane.columnIndex="1"/>

                                        <Label text="Backup Path:" GridPane.rowIndex="5"/>
                                        <TextField fx:id="backupPathField" promptText="/nextcloud/data/admin/files"
                                                   GridPane.columnIndex="1"/>
                                    </children>
                                </GridPane>

                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <children>
                                        <Button fx:id="testConnectionButton" onAction="#testConnection"
                                                text="Test Connection"/>
                                        <Label fx:id="connectionStatus" text="Not connected"/>
                                    </children>
                                </HBox>
                            </children>
                        </VBox>

                        <!-- External Drive Section -->
                        <VBox spacing="10.0" style="-fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-padding: 15;">
                            <children>
                                <Label style="-fx-font-size: 16px; -fx-font-weight: bold;"
                                       text="External Drive Selection"/>

                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <children>
                                        <Label text="Available Drives:"/>
                                        <ComboBox fx:id="driveComboBox" prefWidth="300.0"
                                                  promptText="Select external drive..."/>
                                        <Button fx:id="refreshDrivesButton" onAction="#refreshDrives" text="Refresh"/>
                                    </children>
                                </HBox>

                                <HBox alignment="CENTER_LEFT" spacing="20.0">
                                    <children>
                                        <Label fx:id="driveInfoLabel" text="No drive selected"/>
                                    </children>
                                </HBox>
                            </children>
                        </VBox>

                        <!-- Backup Control Section -->
                        <VBox spacing="10.0" style="-fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-padding: 15;">
                            <children>
                                <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Backup Control"/>

                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <children>
                                        <Button fx:id="startBackupButton" onAction="#startBackup" prefWidth="120.0"
                                                style="-fx-background-color: #27ae60; -fx-text-fill: white;"
                                                text="Start Backup"/>
                                        <Button fx:id="cancelBackupButton" disable="true" onAction="#cancelBackup"
                                                prefWidth="120.0"
                                                style="-fx-background-color: #e74c3c; -fx-text-fill: white;"
                                                text="Cancel Backup"/>
                                    </children>
                                </HBox>

                                <VBox spacing="5.0">
                                    <children>
                                        <Label fx:id="statusLabel" text="Ready"/>
                                        <ProgressBar fx:id="progressBar" prefWidth="9999.0" progress="0.0"/>
                                        <Label fx:id="progressLabel" text=""/>
                                    </children>
                                </VBox>
                            </children>
                        </VBox>

                        <!-- Backup History Section -->
                        <VBox spacing="10.0" style="-fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-padding: 15;">
                            <children>
                                <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Backup History"/>

                                <TableView fx:id="historyTable" prefHeight="200.0">
                                    <columns>
                                        <TableColumn fx:id="timestampColumn" prefWidth="150.0" text="Date/Time"/>
                                        <TableColumn fx:id="sourceColumn" prefWidth="200.0" text="Source"/>
                                        <TableColumn fx:id="destinationColumn" prefWidth="200.0" text="Destination"/>
                                        <TableColumn fx:id="filesColumn" prefWidth="80.0" text="Files"/>
                                        <TableColumn fx:id="sizeColumn" prefWidth="100.0" text="Size"/>
                                        <TableColumn fx:id="statusColumn" prefWidth="80.0" text="Status"/>
                                    </columns>
                                </TableView>
                            </children>
                        </VBox>

                    </children>
                </VBox>
            </content>
        </ScrollPane>
    </children>
</VBox>