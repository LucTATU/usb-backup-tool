
<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.backup.ui.MainController">
   <top>
      <VBox spacing="10.0">
         <children>
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Backup Tool - SMB to USB" />
            <Separator />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </top>
   <center>
      <VBox spacing="15.0">
         <children>
            <HBox spacing="20.0">
               <children>
                  <!-- SMB Source Configuration -->
                  <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Label style="-fx-font-weight: bold;" text="SMB Source (Network Drive)" />
                        <HBox spacing="10.0">
                           <children>
                              <ComboBox fx:id="smbShareComboBox" promptText="Select SMB Share" HBox.hgrow="ALWAYS" />
                              <Button fx:id="scanSmbButton" onAction="#scanSmbShares" text="Scan Network" />
                           </children>
                        </HBox>
                        <HBox spacing="10.0">
                           <children>
                              <TextField fx:id="smbUsernameField" promptText="Username (optional)" HBox.hgrow="ALWAYS" />
                              <PasswordField fx:id="smbPasswordField" promptText="Password" HBox.hgrow="ALWAYS" />
                              <Button fx:id="connectSmbButton" onAction="#connectToSmb" text="Connect" />
                           </children>
                        </HBox>
                        <Label fx:id="smbStatusLabel" text="No SMB shares detected" />
                        <Label text="Select Source Folder:" />
                        <TreeView fx:id="smbDirectoryTree" maxHeight="200.0" />
                     </children>
                  </VBox>
                  
                  <!-- USB Destination Configuration -->
                  <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Label style="-fx-font-weight: bold;" text="USB Destination (Local Drive)" />
                        <HBox spacing="10.0">
                           <children>
                              <ComboBox fx:id="usbDriveComboBox" promptText="Select USB Drive" HBox.hgrow="ALWAYS" />
                              <Button fx:id="refreshUsbButton" onAction="#refreshUsbDrives" text="Refresh USB" />
                           </children>
                        </HBox>
                        <Label fx:id="usbInfoLabel" text="No USB drives detected" />
                        <Label text="Select Destination Folder:" />
                        <TreeView fx:id="usbDirectoryTree" maxHeight="200.0" />
                     </children>
                  </VBox>
               </children>
            </HBox>
            
            <Separator />
            
            <!-- Backup Control -->
            <VBox spacing="10.0">
               <children>
                  <Label style="-fx-font-weight: bold;" text="Backup Control" />
                  <HBox spacing="10.0">
                     <children>
                        <Button fx:id="startBackupButton" disable="true" onAction="#startBackup" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Start Backup" />
                        <Button fx:id="cancelBackupButton" disable="true" onAction="#cancelBackup" style="-fx-background-color: #f44336; -fx-text-fill: white;" text="Cancel Backup" />
                     </children>
                  </HBox>
                  <Label fx:id="statusLabel" text="Ready" />
                  <ProgressBar fx:id="progressBar" progress="0.0" HBox.hgrow="ALWAYS" />
                  <Label fx:id="progressLabel" />
               </children>
            </VBox>
            
            <Separator />
            
            <!-- History Table -->
            <VBox spacing="10.0" VBox.vgrow="ALWAYS">
               <children>
                  <Label style="-fx-font-weight: bold;" text="Backup History" />
                  <TableView fx:id="historyTable" VBox.vgrow="ALWAYS">
                     <columns>
                        <TableColumn fx:id="timestampColumn" prefWidth="120.0" text="Timestamp" />
                        <TableColumn fx:id="sourceColumn" prefWidth="200.0" text="Source" />
                        <TableColumn fx:id="destinationColumn" prefWidth="200.0" text="Destination" />
                        <TableColumn fx:id="filesColumn" prefWidth="80.0" text="Files" />
                        <TableColumn fx:id="sizeColumn" prefWidth="100.0" text="Size" />
                        <TableColumn fx:id="statusColumn" prefWidth="80.0" text="Status" />
                     </columns>
                  </TableView>
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </center>
</BorderPane>
